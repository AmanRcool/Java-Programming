#include<iostream>
using namespace std;

int main(){
    int n ;
    cout<<"enter the value of n";
  
    cin>>n;
      if(n%2==0){
    cout<<"Enter correct value";
    }
    for(int i=0; i<(n+3) ; i++){
        for(int j=0; j<(n+2); j++){
            if(i==0){
                cout<<" * ";
                continue;
            }
            
            if(j==((n+2)/2) && i>0 && i<n+2){
                cout<<" e "<<endl;
                continue;
            }
             if(i==(n+2) && j>0 &&j<n+1){
                cout<<" * ";
                continue;
            }
            cout <<"   " ;
        }
        cout<<endl;
    }
}
